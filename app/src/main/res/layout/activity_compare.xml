<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompareActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_clear"
            app:title="@string/compare_title"
            app:titleTextAppearance="@style/TextAppearance.Material3.TitleLarge" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Image container with overlays -->
    <FrameLayout
        android:id="@+id/imageContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="100dp"
        android:background="?attr/colorSurfaceVariant"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Zoomable image view for overlay mode -->
        <com.imgdiff.app.ui.components.ZoomableImageView
            android:id="@+id/zoomableImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Side by side view -->
        <com.imgdiff.app.ui.components.SideBySideView
            android:id="@+id/sideBySideView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <!-- Diff slider view -->
        <com.imgdiff.app.ui.components.DiffSliderView
            android:id="@+id/diffSlider"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <!-- ROI selector overlay -->
        <com.imgdiff.app.ui.components.ROISelectorView
            android:id="@+id/roiSelector"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <!-- Keypoint overlay -->
        <com.imgdiff.app.ui.components.KeypointOverlayView
            android:id="@+id/keypointOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <!-- Loading indicator -->
        <FrameLayout
            android:id="@+id/loadingOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/progressIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminate="true" />

                <TextView
                    android:id="@+id/loadingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_lg"
                    android:text="@string/processing"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="@android:color/white" />

            </LinearLayout>

        </FrameLayout>

    </FrameLayout>

    <!-- Bottom Sheet -->
    <LinearLayout
        android:id="@+id/bottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_bottom_sheet"
        android:elevation="16dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_peekHeight="120dp"
        app:behavior_hideable="false">

        <!-- Drag Handle -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:paddingTop="12dp"
            android:paddingBottom="4dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/bottom_sheet_drag_handle" />

        <!-- Overlay alpha slider (only visible in overlay mode) -->
        <LinearLayout
            android:id="@+id/overlayAlphaContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/spacing_lg"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/overlay_opacity"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <com.google.android.material.slider.Slider
                android:id="@+id/sliderOverlayAlpha"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginStart="@dimen/spacing_sm"
                android:layout_weight="1"
                android:value="50"
                android:valueFrom="0"
                android:valueTo="100"
                app:trackHeight="5dp"
                app:thumbRadius="6dp"
                app:haloRadius="12dp"
                app:labelBehavior="gone" />

            <TextView
                android:id="@+id/textOverlayAlphaValue"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="50%" />

        </LinearLayout>

        <!-- View mode selector chips -->
        <HorizontalScrollView
            android:id="@+id/viewModeScroller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupViewMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/spacing_md"
                app:selectionRequired="true"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipOverlay"
                    style="@style/Widget.ImageDiffer.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/mode_overlay" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipSideBySide"
                    style="@style/Widget.ImageDiffer.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mode_side_by_side" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipSlider"
                    style="@style/Widget.ImageDiffer.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mode_slider" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipHighlight"
                    style="@style/Widget.ImageDiffer.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mode_highlight" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipMinus"
                    style="@style/Widget.ImageDiffer.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mode_minus" />

            </com.google.android.material.chip.ChipGroup>

        </HorizontalScrollView>

        <!-- Control panel content -->
        <LinearLayout
            android:id="@+id/controlPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/spacing_md">

            <!-- Alignment mode toggle -->
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggleAlignmentMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_sm"
                app:checkedButton="@id/btnAutoAlign"
                app:selectionRequired="true"
                app:singleSelection="true">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAutoAlign"
                    style="@style/Widget.ImageDiffer.Button.Toggle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/auto_alignment" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnManualAlign"
                    style="@style/Widget.ImageDiffer.Button.Toggle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/manual_keypoints" />

            </com.google.android.material.button.MaterialButtonToggleGroup>

            <!-- Status text -->
            <TextView
                android:id="@+id/statusText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_sm"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:visibility="gone"
                tools:text="24 keypoints detected"
                tools:visibility="visible" />

            <!-- Main action buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAlign"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/spacing_sm"
                    android:layout_weight="1"
                    android:text="@string/align_images"
                    app:icon="@drawable/ic_align" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnShowDiff"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/show_diff"
                    app:icon="@drawable/ic_compare" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
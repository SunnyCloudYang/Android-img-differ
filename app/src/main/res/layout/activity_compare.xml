<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompareActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_clear"
            app:title="@string/compare_title"
            app:titleTextAppearance="@style/TextAppearance.Material3.TitleLarge" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Image container with overlays -->
        <FrameLayout
            android:id="@+id/imageContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="?attr/colorSurfaceVariant"
            app:layout_constraintBottom_toTopOf="@id/overlayAlphaContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Zoomable image view for overlay mode -->
            <com.imgdiff.app.ui.components.ZoomableImageView
                android:id="@+id/zoomableImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!-- Side by side view -->
            <com.imgdiff.app.ui.components.SideBySideView
                android:id="@+id/sideBySideView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <!-- Diff slider view -->
            <com.imgdiff.app.ui.components.DiffSliderView
                android:id="@+id/diffSlider"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <!-- ROI selector overlay -->
            <com.imgdiff.app.ui.components.ROISelectorView
                android:id="@+id/roiSelector"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <!-- Keypoint overlay -->
            <com.imgdiff.app.ui.components.KeypointOverlayView
                android:id="@+id/keypointOverlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <!-- Loading indicator -->
            <FrameLayout
                android:id="@+id/loadingOverlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#80000000"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/progressIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:indeterminate="true" />

                    <TextView
                        android:id="@+id/loadingText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_md"
                        android:text="@string/processing"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@android:color/white" />

                </LinearLayout>

            </FrameLayout>

        </FrameLayout>

        <!-- Overlay alpha slider (only visible in overlay mode) -->
        <LinearLayout
            android:id="@+id/overlayAlphaContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorSurface"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/spacing_md"
            android:paddingVertical="@dimen/spacing_xs"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/viewModeScroller"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/overlay_opacity"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <com.google.android.material.slider.Slider
                android:id="@+id/sliderOverlayAlpha"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_sm"
                android:layout_weight="1"
                android:value="50"
                android:valueFrom="0"
                android:valueTo="100"
                app:labelBehavior="gone" />

            <TextView
                android:id="@+id/textOverlayAlphaValue"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="50%" />

        </LinearLayout>

        <!-- View mode selector chips -->
        <HorizontalScrollView
            android:id="@+id/viewModeScroller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorSurface"
            android:scrollbars="none"
            app:layout_constraintBottom_toTopOf="@id/controlPanel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupViewMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_sm"
                app:selectionRequired="true"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipOverlay"
                    style="@style/Widget.ImageDiffer.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/mode_overlay" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipSideBySide"
                    style="@style/Widget.ImageDiffer.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mode_side_by_side" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipSlider"
                    style="@style/Widget.ImageDiffer.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mode_slider" />

            </com.google.android.material.chip.ChipGroup>

        </HorizontalScrollView>

        <!-- Control panel -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/controlPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/corner_radius_lg"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_md">

                <!-- Alignment mode toggle -->
                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/toggleAlignmentMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_md"
                    app:checkedButton="@id/btnAutoAlign"
                    app:selectionRequired="true"
                    app:singleSelection="true">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAutoAlign"
                        style="@style/Widget.ImageDiffer.Button.Toggle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/auto_alignment" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnManualAlign"
                        style="@style/Widget.ImageDiffer.Button.Toggle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/manual_keypoints" />

                </com.google.android.material.button.MaterialButtonToggleGroup>

                <!-- Action buttons row 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_sm"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSelectROI"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_sm"
                        android:layout_weight="1"
                        android:text="@string/select_roi"
                        app:icon="@drawable/ic_roi" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDetectKeypoints"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/detect_keypoints"
                        app:icon="@drawable/ic_keypoint" />

                </LinearLayout>

                <!-- Status text -->
                <TextView
                    android:id="@+id/statusText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_sm"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:visibility="gone"
                    tools:text="24 keypoints detected"
                    tools:visibility="visible" />

                <!-- Main action buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAlign"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_sm"
                        android:layout_weight="1"
                        android:text="@string/align_images"
                        app:icon="@drawable/ic_align" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnShowDiff"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/show_diff"
                        app:icon="@drawable/ic_compare" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>